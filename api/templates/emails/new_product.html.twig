{# templates/emails/new_product.html.twig #}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Nuevo Producto Añadido</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 20px;
            background-color: #f4f4f4;
        }
        .container {
            background-color: #fff;
            padding: 20px;
            border-radius: 5px;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
        }
        h1 {
            color: #333;
            text-align: center;
        }
        .content {
            margin-top: 20px;
            padding: 10px;
            border-top: 2px solid #007BFF;
        }
        .footer {
            margin-top: 20px;
            text-align: center;
            font-size: 0.9em;
            color: #555;
        }
        .highlight {
            color: #007BFF;
            font-weight: bold;
        }
    </style>
</head>
<body>
    <div class="container">
        <h1>¡Nuevo Producto Añadido!</h1>
        <div class="content">
            <p>Estimado Administrador,</p>
            <p>Se ha añadido un nuevo producto:</p>
            <ul>
                <li><span class="highlight">Nombre del Producto:</span> {{ productName }}</li>
                <li><span class="highlight">Fecha y Hora:</span> {{ dateTime }}</li>
            </ul>
        </div>
        <div class="footer">
            <p>Gracias por mantener la tienda actualizada.</p>
        </div>
    </div>
</body>
</html>

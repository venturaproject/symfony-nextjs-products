{# templates/emails/change_password.html.twig #}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Cambio de Contrase√±a</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 20px;
            background-color: #f4f4f4;
        }
        .container {
            background-color: #fff;
            padding: 20px;
            border-radius: 5px;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
        }
        h1 {
            color: #333;
            text-align: center;
        }
        .content {
            margin-top: 20px;
            padding: 10px;
            border-top: 2px solid #007BFF;
        }
        .footer {
            margin-top: 20px;
            text-align: center;
            font-size: 0.9em;
            color: #555;
        }
        .highlight {
            color: #007BFF;
            font-weight: bold;
        }
    </style>
</head>
<body>
<div class="container">
    <h1>{{ 'change_password_success'|trans }}</h1>
    <div class="content">
        <p>{{ 'hello'|trans }} {{ userName }}</p>
        <p>{{ 'password_change_message'|trans }}</p>
        <ul>
            <li><span class="highlight">{{ 'new_password'|trans }}</span> {{ newPassword }}</li>
            <li><span class="highlight">{{ 'change_time'|trans }}</span> {{ dateTime|date('Y-m-d H:i:s') }}</li>
        </ul>
        <p>{{ 'if_not_requested'|trans }}</p>
    </div>
    <div class="footer">
        <p>{{ 'thank_you'|trans }}</p>
    </div>
</div>

</body>
</html>
